<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_shortboxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shortboxing" />

    <Button
        android:id="@+id/bt_longboxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="longboxing" />

    <Button
        android:id="@+id/bt_heavyfeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="heavyfeet" />


    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:src="@drawable/shortboxing"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right">
            <ProgressBar
                android:id="@+id/pb_blood"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width ="120dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/iv_boss"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:src="@drawable/boss"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>